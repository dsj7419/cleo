{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "issues.create request",
  "description": "Create a GitHub issue against the CLEO repository",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 5,
      "maxLength": 200,
      "description": "Issue title"
    },
    "body": {
      "type": "string",
      "minLength": 10,
      "maxLength": 5000,
      "description": "Issue body/description"
    },
    "type": {
      "type": "string",
      "enum": ["bug", "feature", "help"],
      "description": "Issue type (determines labels)"
    },
    "severity": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Severity level (bug reports only)"
    },
    "area": {
      "type": "string",
      "enum": ["cli", "mcp", "docs", "tests", "other"],
      "description": "Affected area of CLEO"
    }
  },
  "required": ["title", "body"],
  "additionalProperties": false
}
